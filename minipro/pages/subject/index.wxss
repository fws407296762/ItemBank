/**index.wxss**/
page{
  height: 100%;
}
.container{
  height: 100%;
}
.body{
  height: calc(100% - 74rpx);
}
.scroll__nav{
  width:100%;
  height: 74rpx;
  background: #f0f0f0;
  border-bottom: 1rpx solid #e0e0e0;
}
.nav__box{
  white-space: nowrap;
  line-height: 1;
  font-size: 0;
  padding: 20rpx 0;
}
.nav__item{
  font-size: 28rpx;
  padding: 0 20rpx;
  color:#999;
}
.nav__item-active{
  color: #66CCCC;
}
.suject__list{
  height: 100%;
  background: #f0f0f0;
}
.suject__item{
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.suject__title{
  font-size: 24rpx;
}
.suject__options{
  font-size: 24rpx;
}
.suject__options-item{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.suject__options-radio{
  transform:scale(0.7);
  vertical-align: 5rpx;
}

.suject__answer{
  display: grid;
  grid-template-columns: 1fr 1fr;
}
.suject__answer--right{
  text-align: right;
}